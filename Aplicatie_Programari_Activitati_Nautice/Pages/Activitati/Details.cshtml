@page
@model Aplicatie_Programari_Activitati_Nautice.Pages.Activitati.DetailsModel

@{
    ViewData["Title"] = "Details";
}
<head>
    <link rel="stylesheet" type="text/css" href="~/css/site.css">

</head>
<body>
    <img src="~/css/poza.jpg" alt="Imagine de fundal" style="position: fixed; top: 0; left: 0; width: 100%; height: 100%; z-index: -1; opacity: 0.7;">

    <h1>Detalii activitate</h1>
    <hr style="border: none; height: 2px; background-color: #3ecae9;">

    <div>
        <h4>Activitate</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Activitate.Denumire)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Activitate.Denumire)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Activitate.Descriere)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Activitate.Descriere)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Activitate.Durata)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Activitate.Durata)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Activitate.Pret)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Activitate.Pret)
            </dd>
        </dl>
    </div>
    <div>
        <a asp-page="./Edit" asp-route-id="@Model.Activitate?.ID">Edit</a> |
        <a asp-page="./Index">Inapoi</a>
    </div>

</body>
