@page
@model Aplicatie_Programari_Activitati_Nautice.Pages.Reviews.IndexModel

@{
    ViewData["Title"] = "Index";
}
<head>
    <link rel="stylesheet" type="text/css" href="~/css/site.css">

</head>

<body>
    
    <img src="~/css/poza.jpg" alt="Imagine de fundal" style="position: fixed; top: 0; left: 0; width: 100%; height: 100%; z-index: -1; opacity: 0.7;">
    <div style="display: flex; justify-content: space-between;">
        <h1 style="margin-right: auto;">Recenzii</h1>
        <p>
            <a asp-page="Create" class="custom-button">Adauga un review!</a>
        </p>
    </div>
    <hr style="border: none; height: 2px; background-color: #3ecae9;">
    <div class="container">
            <div style="display:flex;gap:40px;flex-wrap:wrap;justify-content:center;flex-direction:column;align-content:center;">
            
                
              <div style="display:flex;gap:20px; max-width:1700px;flex-wrap:wrap;justify-content:flex-start;">
                @foreach (var item in Model.Review)
                     {


                    <div style="border: 1px solid #ccc; padding: 10px; margin-bottom: 10px; border-radius:10px; display: flex; flex-direction: column; width:350px; overflow:auto; background-color:white; box-shadow: 0 8px 12px #3ecae9;">
                        <p>
                            <strong>Name:</strong> @Html.DisplayFor(modelItem => item.Name)
                        </p>
                        <p>
                            <strong>Opinie:</strong> @Html.DisplayFor(modelItem => item.Opinie)
                        </p>
                        <p>
                            <strong>Rating:</strong>
                            <span>@Model.GetStarRating(item.Nota)</span>
                        </p>
                        @if (User.IsInRole("Admin"))
                        {
                            <p>

                                <a asp-page="./Details" asp-route-id="@item.ID">Detalii</a> |
                                <a asp-page="./Delete" asp-route-id="@item.ID">Sterge</a>
                            </p>
                        }

                    </div>
                }
            </div>
            
        </div>
    </div>


</body>
