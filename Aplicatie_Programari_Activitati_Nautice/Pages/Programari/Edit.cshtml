@page
@model Aplicatie_Programari_Activitati_Nautice.Pages.Programari.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Programare</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Programare.ID" />
            <div class="form-group">
                <label asp-for="Programare.Nume" class="control-label"></label>
                <input asp-for="Programare.Nume" class="form-control" />
                <span asp-validation-for="Programare.Nume" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Programare.Prenume" class="control-label"></label>
                <input asp-for="Programare.Prenume" class="form-control" />
                <span asp-validation-for="Programare.Prenume" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Programare.Activitate.Denumire" class="control-label"></label>
                <select asp-for="Programare.Activitate.Denumire" class="form-control" asp-items="Model.ActivitateList">
                    <option value="">Selecteaza o activitate</option>
                </select>
                <span asp-validation-for="Programare.ActivitateID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Programare.Data" class="control-label"></label>
                <input asp-for="Programare.Data" class="form-control" />
                <span asp-validation-for="Programare.Data" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Programare.NrPersoane" class="control-label"></label>
                <input asp-for="Programare.NrPersoane" class="form-control" />
                <span asp-validation-for="Programare.NrPersoane" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Programare.PretTotal" class="control-label"></label>
                <input asp-for="Programare.PretTotal" class="form-control" />
                <span asp-validation-for="Programare.PretTotal" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
