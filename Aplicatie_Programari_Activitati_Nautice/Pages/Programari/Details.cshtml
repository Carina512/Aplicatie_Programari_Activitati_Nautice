@page
@model Aplicatie_Programari_Activitati_Nautice.Pages.Programari.DetailsModel

@{
    ViewData["Title"] = "Details";
}
<head>
    <link rel="stylesheet" type="text/css" href="~/css/site.css">

</head>
<body>
    <img src="~/css/poza.jpg" alt="Imagine de fundal" style="position: fixed; top: 0; left: 0; width: 100%; height: 100%; z-index: -1; opacity: 0.7;">


    <h1>Detalii programare</h1>
    <hr style="border: none; height: 2px; background-color: #3ecae9;">

    <div>
        <h4>Programare</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Programare.Nume)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Programare.Nume)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Programare.Prenume)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Programare.Prenume)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Programare.ActivitateID)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Programare.ActivitateID)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Programare.Data)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Programare.Data)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Programare.NrPersoane)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Programare.NrPersoane)
            </dd>
            

        </dl>
    </div>
    <div>
        <a asp-page="./Edit" asp-route-id="@Model.Programare?.ID">Editeaza</a> |
        <a asp-page="./Index">Inapoi</a>
    </div>
</body>

