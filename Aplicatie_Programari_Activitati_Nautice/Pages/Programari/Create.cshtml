@page
@model Aplicatie_Programari_Activitati_Nautice.Pages.Programari.CreateModel

@{
    ViewData["Title"] = "Create";
}
<head>
    <link rel="stylesheet" type="text/css" href="~/css/site.css">

</head>
<body>
    <img src="~/css/poza.jpg" alt="Imagine de fundal" style="position: fixed; top: 0; left: 0; width: 100%; height: 100%; z-index: -1; opacity: 0.7;">

    <h1>Fa-ti o programare!</h1>
    <hr style="border: none; height: 2px; background-color: #3ecae9;">


    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Programare.Nume" class="control-label"></label>
                    <input asp-for="Programare.Nume" class="form-control" />
                    <span asp-validation-for="Programare.Nume" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Programare.Prenume" class="control-label"></label>
                    <input asp-for="Programare.Prenume" class="form-control" />
                    <span asp-validation-for="Programare.Prenume" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Programare.ActivitateID" class="control-label"></label>
                    <select asp-for="Programare.ActivitateID" class="form-control" asp-items="Model.ActivitateList">
                        <option value="">Selecteaza o activitate</option>
                    </select>
                    <span asp-validation-for="Programare.ActivitateID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Programare.Data" class="control-label"></label>
                    <input asp-for="Programare.Data" class="form-control" />
                    <span asp-validation-for="Programare.Data" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Programare.NrPersoane" class="control-label"></label>
                    <input asp-for="Programare.NrPersoane" class="form-control" />
                    <span asp-validation-for="Programare.NrPersoane" class="text-danger"></span>
                </div>
                

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-page="Index">Inapoi</a>
    </div>

</body>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
